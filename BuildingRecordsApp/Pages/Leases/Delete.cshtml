@page
@model BuildingRecordsApp.Pages.Leases.DeleteModel
@{
    ViewData["Title"] = "Delete Lease";
}
<h1>Delete Lease</h1>
<p>Are you sure you want to delete this lease?</p>

<div>
    <div>
        <h4>Lease</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Lease.LeaseHolderName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Lease.LeaseHolderName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Lease.StartDate)
            </dt>
            <dd class="col-sm-10">
                @Model.Lease.StartDate.ToShortDateString()
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Lease.EndDate)
            </dt>
            <dd class="col-sm-10">
                @Model.Lease.EndDate.ToShortDateString()
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Lease.PersonsOccupying)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Lease.PersonsOccupying)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Lease.SignedRules)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Lease.SignedRules)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Lease.AllowedPets)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Lease.AllowedPets)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Lease.EmergencyContactNumber)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Lease.EmergencyContactNumber)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Lease.Unit!.Building!.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Lease.Unit!.Building!.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Lease.Unit!.UnitNumber)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Lease.Unit!.UnitNumber)
            </dd>
        </dl>
    </div>
    <form method="post">
        <input type="hidden" asp-for="Lease.LeaseId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
@model BuildingRecordsApp.Pages.Agents.IndexModel
@{
    ViewData["Title"] = "Agents";
}
<h1>Agent Index</h1>

<p>
    <a asp-page="./Create" class="btn btn-primary">Create New Agent</a>
</p>

@* 
Agent has following fields:
int AgentId
string FirstName
string LastName
string PhoneNumber
string Email
int AgentCompanyId // Foreign key to AgentCompany
AgentCompany AgentCompany // Navigation property
ICollection<Unit> Units // Navigation property
 *@

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Agents[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Agents[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Agents[0].PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Agents[0].Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Agents)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.AgentId" class="btn btn-sm btn-primary me-1">Edit</a>
                    <a asp-page="./Details" asp-route-id="@item.AgentId" class="btn btn-sm btn-info text-white me-1">Details</a>
                    <a asp-page="./Delete" asp-route-id="@item.AgentId" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
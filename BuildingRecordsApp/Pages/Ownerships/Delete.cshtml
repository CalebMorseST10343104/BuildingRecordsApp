@page
@model BuildingRecordsApp.Pages.Ownerships.DeleteModel
@{
    ViewData["Title"] = "Delete Ownership";
}

<h1>Delete Ownership</h1>
<p>Are you sure you want to delete this ownership?</p>

<div>
    <h4>Ownership</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Unit Number
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ownership.Unit!.UnitNumber)
        </dd>
        <dt class="col-sm-2">
            Ownership Type
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ownership.OwnershipType)
        </dd>
    </dl>
    <br />
    <h4>Owners</h4>
    <hr />
    <div style="width: 50%; margin-left: 0; margin-right: 0;">
        <table class="table table-sm">
            <thead>
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Email Address</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var owner in Model.Ownership.Owners)
            {
                <tr>
                    <td>@owner.Person?.Name</td>
                    <td>@owner.Person?.Surname</td>
                    <td>@owner.Person?.Email</td>
                </tr>
            }
            </tbody>
        </table>
    </div>
    <br />
    <h4>Company/Trust</h4>
    <hr />
    @if (Model.Ownership.CompanyTrust != null)
    {
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Ownership.CompanyTrust!.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Ownership.CompanyTrust!.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Ownership.CompanyTrust!.RegistrationNumber)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Ownership.CompanyTrust!.RegistrationNumber)
            </dd>
        </dl>
    }
    else {<p>No company/trust found</p>}
    <br>
</div>
<div>
    <form method="post">
        <input type="hidden" asp-for="Ownership.OwnershipId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>

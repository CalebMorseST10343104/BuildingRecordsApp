@page
@model BuildingRecordsApp.Pages.Ownerships.CreateModel
@{
    ViewData["Title"] = "Create Ownership";
}
<h1>Create New Ownership</h1>

@* 
Ownership has following fields:
int OwnershipId
string OwnershipType // e.g., "Natural", "Juristic"
string UnitId // Foreign key for Unit
Unit Unit // Navigation property for Unit
 *@

<form method="post">
    <div>
        <label asp-for="ViewModel.UnitId"></label>
        <select asp-for="ViewModel.UnitId" asp-items="@Model.UnitSelectList"></select>
        <span asp-validation-for="ViewModel.UnitId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ViewModel.OwnershipType" class="control-label"></label>
        <select asp-for="ViewModel.OwnershipType" class="form-control">
            <option value="">-- Select Ownership Type --</option>
            <option value="Natural">Natural</option>
            <option value="Juristic">Juristic</option>
        </select>
        <span asp-validation-for="ViewModel.OwnershipType" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="ViewModel.CompanyTrustId"></label>
        <select asp-for="ViewModel.CompanyTrustId" asp-items="@Model.CompanyTrustSelectList"></select>
        <span asp-validation-for="ViewModel.CompanyTrustId" class="text-danger"></span>
    </div>
     <button type="submit" class="btn btn-primary">Create</button>
    <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
</form>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
@page
@model BuildingRecordsApp.Pages.Ownerships.CreateModel
@{
    ViewData["Title"] = "Create Ownership";
}
<h1>Create New Ownership</h1>

@* 
Ownership has following fields:
int OwnershipId
string OwnershipType // e.g., "Natural", "Juristic"
string UnitId // Foreign key for Unit
Unit Unit // Navigation property for Unit
 *@

<form method="post">
    <div class="form-group">
        <label asp-for="Ownership.OwnershipType" class="control-label"></label>
        <select asp-for="Ownership.OwnershipType" class="form-control">
            <option value="">-- Select Ownership Type --</option>
            <option value="Natural">Natural</option>
            <option value="Juristic">Juristic</option>
        </select>
        <span asp-validation-for="Ownership.OwnershipType" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="Ownership.UnitId"></label>
        <select asp-for="Ownership.UnitId" asp-items="@Model.UnitSelectList"></select>
        <span asp-validation-for="Ownership.UnitId" class="text-danger"></span>
    </div>

    <div>
        <button type="submit">Create</button>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
@page
@model BuildingRecordsApp.Pages.Persons.IndexModel
@{
    ViewData["Title"] = "Persons";
}

<h1>Person Index</h1>

<p>
    <a asp-page="./Create" class="btn btn-primary">Create New Person</a>
</p>

@* 
Person has the following fields:
int PersonId (Primary Key)
string Name
string Surname
string Email
string PostalAddress
string IdNumber
string PhoneNumber
*@

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Persons[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Persons[0].Surname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Persons[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Persons[0].PostalAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Persons[0].IdNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Persons[0].PhoneNumber)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Persons)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Surname)</td>
                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                <td>@Html.DisplayFor(modelItem => item.PostalAddress)</td>
                <td>@Html.DisplayFor(modelItem => item.IdNumber)</td>
                <td>@Html.DisplayFor(modelItem => item.PhoneNumber)</td>

                <td>
                    <a asp-page="./Edit" asp-route-id="@item.PersonId">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.PersonId">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.PersonId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
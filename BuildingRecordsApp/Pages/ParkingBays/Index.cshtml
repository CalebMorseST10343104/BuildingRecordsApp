@page
@model BuildingRecordsApp.Pages.ParkingBays.IndexModel
@{
    ViewData["Title"] = "Parking Bays";
}

<h1>Parking Bay Index</h1>

<p>
    <a asp-page="./Create" class="btn btn-primary">Create New Parking Bay</a>
</p>

@* 
ParkingBay has following fields:
int ParkingBayID
int ParkingBayNumber
int UnitID // Foreign key
Unit Unit // Navigation property
 *@

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ParkingBays[0].Unit!.Building!.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ParkingBays[0].Unit!.UnitNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ParkingBays[0].ParkingBayNumber)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ParkingBays)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Unit!.Building!.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Unit!.UnitNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ParkingBayNumber)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.ParkingBayID" class="btn btn-sm btn-primary me-1">Edit</a>
                    <a asp-page="./Details" asp-route-id="@item.ParkingBayID" class="btn btn-sm btn-info text-white me-1">Details</a>
                    <a asp-page="./Delete" asp-route-id="@item.ParkingBayID" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
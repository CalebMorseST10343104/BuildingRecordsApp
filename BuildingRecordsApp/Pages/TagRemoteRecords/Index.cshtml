@page
@model BuildingRecordsApp.Pages.TagRemoteRecords.IndexModel
@{
    ViewData["Title"] = "Tag Remote Records";
}

<h1>Tag Remote Records</h1>

<p>
    <a asp-page="./Create" class="btn btn-primary">Create New Tag & Remote Record</a>
</p>

@* 
TagRemoteRecord has the following properties:
int TagRemoteRecordId
int TagsOwner
int RemotesOwner
int TagsOccupant
int RemotesOccupant
int TagsAgent
int RemotesAgent
 *@

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TagRemoteRecords[0].Unit!.UnitNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TagRemoteRecords[0].TagsOwner)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TagRemoteRecords[0].RemotesOwner)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TagRemoteRecords[0].TagsOccupant)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TagRemoteRecords[0].RemotesOccupant)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TagRemoteRecords[0].TagsAgent)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TagRemoteRecords[0].RemotesAgent)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.TagRemoteRecords)
        {
            <tr>
                <td>@item.Unit!.UnitId</td>
                <td>@item.TagsOwner</td>
                <td>@item.RemotesOwner</td>
                <td>@item.TagsOccupant</td>
                <td>@item.RemotesOccupant</td>
                <td>@item.TagsAgent</td>
                <td>@item.RemotesAgent</td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.TagRemoteRecordId">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.TagRemoteRecordId">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.TagRemoteRecordId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@page
@model BuildingRecordsApp.Pages.TagRemoteRecords.DeleteModel
@{
    ViewData["Title"] = "Delete T&R Record";
}
<h1>Delete Tag & Remote Record</h1>
<p>Are you sure you want to delete this tag & remote record?</p>

<div>
    <h4>Tag & Remote Record</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TagRemoteRecord.Unit!.Building!.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TagRemoteRecord.Unit!.Building!.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TagRemoteRecord.Unit!.UnitNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TagRemoteRecord.Unit!.UnitNumber)
        </dd>
    </dl>
    <br />
    <div style="width: 50%; overflow-x: auto;">
        <table class="table">
            <thead>
                <tr>
                    <th></th>
                    <th>Owner</th>
                    <th>Occupant</th>
                    <th>Agent</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Tags</td>
                    <td>
                        @Html.DisplayFor(model => model.TagRemoteRecord.TagsOwner)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.TagRemoteRecord.TagsOccupant)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.TagRemoteRecord.TagsAgent)
                    </td>
                </tr>
                <tr>
                    <td>Remotes</td>
                    <td>
                        @Html.DisplayFor(model => model.TagRemoteRecord.RemotesOwner)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.TagRemoteRecord.RemotesOccupant)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.TagRemoteRecord.RemotesAgent)
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
    <form method="post">
        <input type="hidden" asp-for="TagRemoteRecord.TagRemoteRecordId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>

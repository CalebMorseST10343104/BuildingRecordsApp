@page
@model BuildingRecordsApp.Pages.Buildings.DeleteModel
@{
    ViewData["Title"] = "Delete Building";
}
<h1>Delete Building</h1>
<p>Are you sure you want to delete this building?</p>

<div>
    <div>
        <h4>Building</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Building.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Building.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Building.Address)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Building.Address)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Building.NumberOfUnits)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Building.NumberOfUnits)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Building.NumberOfFloors)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Building.NumberOfFloors)
            </dd>
        </dl>
    </div>
    <form method="post">
        <input type="hidden" asp-for="Building.BuildingId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-page="./Index" class="btn btn-secondary">Cancel</a>

    </form>
</div>
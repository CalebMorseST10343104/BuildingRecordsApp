@page
@model BuildingRecordsApp.Pages.StoreRooms.EditModel
@{
    ViewData["Title"] = "Edit Store Room";
}

<h1>Edit Store Room</h1>

<form method="post">
    <div>
        <label asp-for="ViewModel.StoreRoomNumber"></label>
        <input asp-for="ViewModel.StoreRoomNumber" />
        <span asp-validation-for="ViewModel.StoreRoomNumber" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="ViewModel.UnitId"></label>
        <select asp-for="ViewModel.UnitId" asp-items="@Model.UnitSelectList">
            <option value="">Select Unit</option>
        </select>
        <span asp-validation-for="ViewModel.UnitId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Edit</button>
    <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
</form>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@page
@model BuildingRecordsApp.Pages.StoreRooms.DeleteModel
@{
    ViewData["Title"] = "Delete Store Room";
}
<h1>Delete Store Room</h1>
<p>Are you sure you want to delete this store room?</p>

<div>
    <h4>Store Room</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StoreRoom.StoreRoomNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StoreRoom.StoreRoomNumber)
        </dd>
        @if (Model.StoreRoom.Unit != null)
        {
            <dt class="col-sm-2">
                Unit Building
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.StoreRoom.Unit!.Building!.Name)
            </dd>
            <dt class="col-sm-2">
                Unit Number
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.StoreRoom.Unit!.UnitNumber)
            </dd>
        }
        else
        {
            <dt class="col-sm-2">
                Unit Number
            </dt>
            <dd class="col-sm-10">
                No unit assigned
            </dd>
        }
    </dl>
    <form method="post">
        <input type="hidden" asp-for="StoreRoom.StoreRoomId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>

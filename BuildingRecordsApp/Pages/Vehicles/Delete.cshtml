@page
@model BuildingRecordsApp.Pages.Vehicles.DeleteModel
@{
    ViewData["Title"] = "Delete Vehicle";
}
<h1>Delete Vehicle</h1>
<p>Are you sure you want to delete this vehicle?</p>

<div>
    <h4>Vehicle</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Vehicle.VehicleRegistration)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Vehicle.VehicleRegistration)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Vehicle.VehicleMake)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Vehicle.VehicleMake)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Vehicle.VehicleModel)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Vehicle.VehicleModel)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Vehicle.VehicleColor)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Vehicle.VehicleColor)
        </dd>
        @if (Model.Vehicle.Unit != null)
        {
            <dt class="col-sm-2">
                Unit Building
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Vehicle.Unit!.Building!.Name)
            </dd>
            <dt class="col-sm-2">
                Unit Number
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Vehicle.Unit!.UnitNumber)
            </dd>
        }
        else
        {
            <dt class="col-sm-2">
                Unit Number
            </dt>
            <dd class="col-sm-10">
                No unit assigned
            </dd>
        }
    </dl>
    <form method="post">
        <input type="hidden" asp-for="Vehicle.VehicleId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
    </form>

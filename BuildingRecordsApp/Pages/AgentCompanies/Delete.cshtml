@page
@model BuildingRecordsApp.Pages.AgentCompanies.DeleteModel
@{
    ViewData["Title"] = "Delete Agent Company";
}
<h1>Delete Agent Company</h1>
<p>Are you sure you want to delete this agent company?</p>
<div>
    <div>
        <h4>Agent Company</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.AgentCompany.CompanyName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.AgentCompany.CompanyName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.AgentCompany.Address)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.AgentCompany.Address)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.AgentCompany.RegistrationNumber)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.AgentCompany.RegistrationNumber)
            </dd>
        </dl>
        <br />
        <h4>Associated Agents</h4>
        <hr />
        <div style="width: 50%; overflow-x: auto;">
            <table class="table">
                <thead>
                    <tr>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Phone Number</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var agent in Model.AgentCompany.Agents)
                    {
                        <tr>
                            <td>@Html.DisplayFor(m => agent.FirstName)</td>
                            <td>@Html.DisplayFor(m => agent.LastName)</td>
                            <td>@Html.DisplayFor(m => agent.PhoneNumber)</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <form method="post">
        <input type="hidden" asp-for="AgentCompany.AgentCompanyId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>

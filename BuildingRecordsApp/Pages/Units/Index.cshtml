@page
@model BuildingRecordsApp.Pages.Units.IndexModel
@{
    ViewData["Title"] = "Units";
}

<h1>Unit Index</h1>

<p>
    <a asp-page="./Create" class="btn btn-primary">Create New Unit</a>
</p>

@* 
Unit has following fields:
int UnitId (Primary Key)
string UnitNumber
int Bedrooms
bool DbInverter
bool Housekeeping
bool PetFriendly
bool SublettingAllowed
int AirconditioningUnits 
*@

<table class="table">
    <thead>
        <tr>
            
            <th>
                @Html.DisplayNameFor(model => model.Units[0].Building!.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Units[0].UnitNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Units[0].Bedrooms)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Units[0].DbInverter)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Units[0].Housekeeping)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Units[0].PetFriendly)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Units[0].SublettingAllowed)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Units[0].AirconditioningUnits)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Units)
        {
            <tr>
                <td>@item.Building!.Name</td>
                <td>@item.UnitNumber</td>
                <td>@item.Bedrooms</td>
                <td>@item.DbInverter</td>
                <td>@item.Housekeeping</td>
                <td>@item.PetFriendly</td>
                <td>@item.SublettingAllowed</td>
                <td>@item.AirconditioningUnits</td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.UnitId" class="btn btn-sm btn-primary me-1">Edit</a>
                    <a asp-page="./Details" asp-route-id="@item.UnitId" class="btn btn-sm btn-info text-white me-1">Details</a>
                    <a asp-page="./Delete" asp-route-id="@item.UnitId" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
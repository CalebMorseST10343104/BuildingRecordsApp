@page
@model BuildingRecordsApp.Pages.CompanyTrusts.DeleteModel
@{
    ViewData["Title"] = "Delete Company/Trust";
}
<h1>Delete Company/Trust</h1>
<p>Are you sure you want to delete this company/trust?</p>

<div>
    <h4>Company/Trust</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CompanyTrust.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CompanyTrust.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CompanyTrust.RegistrationNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CompanyTrust.RegistrationNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CompanyTrust.Address)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CompanyTrust.Address)
        </dd>
    </dl>
    <hr />
    <h4>Units Owned</h4>
    <div style="width: 50%; margin-left: 0; margin-right: 0;">
        <table class="table">
            <thead>
                <tr>
                    <th>Building</th>
                    <th>Unit Number</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var ownership in Model.CompanyTrust.Ownerships)
                {
                    <tr>
                        <td>@ownership.Unit!.Building!.Name</td>
                        <td>@ownership.Unit!.UnitNumber</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <form method="post">
        <input type="hidden" asp-for="CompanyTrust.CompanyTrustId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
